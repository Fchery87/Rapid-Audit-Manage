{% extends 'base.html.twig' %}

{% block title %}{{ 'client.dashboard.title'|trans }}{% endblock %}

{% block body_class %}client-portal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .client-portal .alert {
            border-radius: 0.75rem;
            padding: 0.75rem 1rem;
            margin: 0;
            font-size: 0.95rem;
        }
        .client-portal .alert + .alert {
            margin-top: 0.5rem;
        }
        .alert--success {
            background: rgba(34, 197, 94, 0.15);
            color: #166534;
        }
        .alert--error {
            background: rgba(239, 68, 68, 0.15);
            color: #991b1b;
        }
        .alert--info {
            background: rgba(59, 130, 246, 0.15);
            color: #1d4ed8;
        }
        .client-portal__grid {
            display: grid;
            gap: 1.5rem;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }
        .client-portal__section {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            background: rgba(148, 163, 184, 0.08);
            border-radius: 1rem;
            padding: 1.25rem;
            height: 100%;
        }
        .client-portal__tasks-list,
        .client-portal__documents-list,
        .client-portal__audits-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .client-portal__task {
            background: #fff;
            border-radius: 0.75rem;
            border: 1px solid rgba(148, 163, 184, 0.4);
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        .client-portal__task--ack {
            border-color: rgba(34, 197, 94, 0.4);
            background: rgba(34, 197, 94, 0.08);
        }
        .client-portal__task-footer {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            align-items: center;
            justify-content: space-between;
        }
        .client-portal__task-status {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        .client-portal__document,
        .client-portal__audit {
            background: #fff;
            border-radius: 0.75rem;
            border: 1px solid rgba(148, 163, 184, 0.35);
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        .badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 999px;
            padding: 0.25rem 0.75rem;
            background: rgba(34, 197, 94, 0.18);
            color: #166534;
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.03em;
            text-transform: uppercase;
        }
        .client-portal__document-meta,
        .client-portal__audit-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            font-size: 0.9rem;
            color: #475569;
        }
        .client-portal__account-switcher {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            align-items: center;
        }
        .client-portal__account-switcher select {
            padding: 0.5rem 0.75rem;
            border-radius: 0.5rem;
            border: 1px solid rgba(148, 163, 184, 0.6);
            min-width: 220px;
        }
        .client-portal__upload-form {
            display: grid;
            gap: 0.75rem;
        }
        .client-portal__upload-form input[type="file"] {
            padding: 0.35rem 0;
        }
        .client-portal__score-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 0.75rem;
            font-size: 0.9rem;
        }
        .client-portal__score-card {
            background: rgba(59, 130, 246, 0.12);
            border-radius: 0.75rem;
            padding: 0.75rem;
            text-align: center;
        }
        .client-portal__score-card strong {
            display: block;
            font-size: 1.25rem;
        }
        @media (max-width: 640px) {
            .client-portal__task-footer {
                flex-direction: column;
                align-items: flex-start;
            }
            .client-portal__account-switcher {
                align-items: stretch;
                flex-direction: column;
            }
            .client-portal__account-switcher select {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="stack gap-lg">
        <section class="card stack gap-md">
            <header class="stack gap-xs">
                {% set headline_name = active_account ? (active_account.first_name ~ ' ' ~ active_account.last_name)|trim : app.user.userIdentifier %}
                <h1 class="page-title">{{ 'client.dashboard.heading'|trans({'%name%': headline_name}) }}</h1>
                <p class="muted">{{ 'client.dashboard.subtitle'|trans }}</p>
            </header>

            {% if accounts is empty %}
                <p class="muted">{{ 'client.dashboard.no_account'|trans }}</p>
            {% elseif accounts|length > 1 %}
                <form method="get" class="client-portal__account-switcher">
                    <label class="sr-only" for="client-account">{{ 'client.dashboard.account_switch'|trans }}</label>
                    <select id="client-account" name="aid" aria-label="{{ 'client.dashboard.account_switch'|trans }}" onchange="this.form.submit()">
                        {% for account in accounts %}
                            <option value="{{ account.aid }}" {% if active_account and account.aid == active_account.aid %}selected{% endif %}>
                                {{ account.first_name }} {{ account.last_name }} ({{ account.email|default('') }})
                            </option>
                        {% endfor %}
                    </select>
                    <noscript>
                        <button type="submit" class="button button--ghost">{{ 'client.dashboard.account_submit'|trans }}</button>
                    </noscript>
                </form>
            {% endif %}

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert--{{ label }}">{{ message|trans }}</div>
                {% endfor %}
            {% endfor %}
        </section>

        {% if active_account %}
            <div class="client-portal__grid">
                <section class="client-portal__section">
                    <div class="stack gap-sm">
                        <h2>{{ 'client.dashboard.audits_title'|trans }}</h2>
                        <p class="muted">{{ 'client.dashboard.audits_subtitle'|trans }}</p>
                    </div>
                    {% if audits %}
                        <ul class="client-portal__audits-list">
                            {% for report in audits %}
                                <li class="client-portal__audit">
                                    <div class="client-portal__audit-meta">
                                        <span>{{ report.parsedAt|date('M j, Y') }}</span>
                                        <span>{{ 'client.dashboard.audit_items'|trans({'%count%': report.derogatoryAccounts.total|default(report.derogatoryAccounts.accounts|length|default(0)) }) }}</span>
                                    </div>
                                    <div class="client-portal__score-grid">
                                        <div class="client-portal__score-card">
                                            <span>{{ 'client.dashboard.score.transunion'|trans }}</span>
                                            <strong>{{ report.clientData.trans_union.credit_score|default('—') }}</strong>
                                        </div>
                                        <div class="client-portal__score-card">
                                            <span>{{ 'client.dashboard.score.equifax'|trans }}</span>
                                            <strong>{{ report.clientData.equifax.credit_score|default('—') }}</strong>
                                        </div>
                                        <div class="client-portal__score-card">
                                            <span>{{ 'client.dashboard.score.experian'|trans }}</span>
                                            <strong>{{ report.clientData.experian.credit_score|default('—') }}</strong>
                                        </div>
                                    </div>
                                    <a class="button button--ghost" href="{{ path('app_client_audit_view', { id: report.id }) }}">{{ 'client.dashboard.view_audit'|trans }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="muted">{{ 'client.dashboard.audits_empty'|trans }}</p>
                    {% endif %}
                </section>

                <section class="client-portal__section">
                    <div class="stack gap-sm">
                        <h2>{{ 'client.dashboard.tasks_title'|trans }}</h2>
                        <p class="muted">{{ 'client.dashboard.tasks_subtitle'|trans }}</p>
                    </div>
                    {% if tasks %}
                        <ul class="client-portal__tasks-list">
                            {% for task in tasks %}
                                <li class="client-portal__task {% if task.clientAcknowledgedAt %}client-portal__task--ack{% endif %}">
                                    <div>
                                        <h3>{{ task.description }}</h3>
                                        <p class="muted">{{ 'client.dashboard.task_assigned'|trans({'%assignee%': task.assignedTo}) }}</p>
                                    </div>
                                    <div class="client-portal__task-footer">
                                        <div class="stack gap-xs">
                                            <span class="client-portal__task-status">{{ ('client.dashboard.task_status.' ~ task.status)|trans }}</span>
                                            {% if task.dueAt %}
                                                <span class="muted">{{ 'client.dashboard.task_due'|trans({'%date%': task.dueAt|date('M j, Y')}) }}</span>
                                            {% endif %}
                                            {% if task.clientAcknowledgedAt %}
                                                <span class="muted">{{ 'client.dashboard.task_acknowledged'|trans({'%date%': task.clientAcknowledgedAt|date('M j, Y')}) }}</span>
                                            {% endif %}
                                        </div>
                                        {% if not task.clientAcknowledgedAt %}
                                            <form method="post" action="{{ path('app_client_task_acknowledge', { taskId: task.id }) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('ack_task_' ~ task.id) }}">
                                                <button type="submit" class="button button--primary button--small">{{ 'client.dashboard.task_acknowledge'|trans }}</button>
                                            </form>
                                        {% else %}
                                            <span class="badge">{{ 'client.dashboard.task_acknowledged_badge'|trans }}</span>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="muted">{{ 'client.dashboard.tasks_empty'|trans }}</p>
                    {% endif %}
                </section>

                <section class="client-portal__section">
                    <div class="stack gap-sm">
                        <h2>{{ 'client.dashboard.documents_title'|trans }}</h2>
                        <p class="muted">{{ 'client.dashboard.documents_description'|trans }}</p>
                    </div>
                    <form class="client-portal__upload-form" method="post" action="{{ path('app_client_document_upload') }}" enctype="multipart/form-data">
                        <input type="hidden" name="_token" value="{{ csrf_token('client_upload_' ~ active_account.aid) }}">
                        <input type="hidden" name="account_aid" value="{{ active_account.aid }}">
                        <label for="client-document">{{ 'client.dashboard.documents_label'|trans }}</label>
                        <input id="client-document" type="file" name="document" accept=".pdf,.png,.jpg,.jpeg,.tif,.tiff,.doc,.docx,.xls,.xlsx,.txt" required>
                        <button type="submit" class="button button--primary">{{ 'client.dashboard.documents_submit'|trans }}</button>
                    </form>
                    {% if documents %}
                        <ul class="client-portal__documents-list">
                            {% for document in documents %}
                                <li class="client-portal__document">
                                    <div>
                                        <strong>{{ document.originalName }}</strong>
                                        <div class="client-portal__document-meta">
                                            <span>{{ document.mimeType }}</span>
                                            <span>{{ 'client.dashboard.documents_size'|trans({'%size%': (document.size / 1024)|number_format(1)}) }}</span>
                                            <span>{{ 'client.dashboard.documents_uploaded'|trans({'%date%': document.uploadedAt|date('M j, Y H:i')}) }}</span>
                                        </div>
                                    </div>
                                    <a class="button button--ghost button--small" href="{{ path('app_client_document_download', { id: document.id }) }}">{{ 'client.dashboard.documents_download'|trans }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="muted">{{ 'client.dashboard.documents_empty'|trans }}</p>
                    {% endif %}
                </section>
            </div>
        {% endif %}
    </div>
{% endblock %}
