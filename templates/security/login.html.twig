{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }} Â· {{ 'app.name'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auth-wrapper {
            min-height: calc(100vh - 4rem);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .auth-card {
            max-width: 420px;
            width: 100%;
            padding: 2.5rem;
            border-radius: 24px;
            background: #fff;
            box-shadow: 0 25px 45px rgba(15, 23, 42, 0.12);
        }
        .auth-card h1 {
            margin-bottom: 0.5rem;
            text-align: center;
        }
        .auth-card p {
            text-align: center;
        }
        .auth-card form {
            margin-top: 2rem;
        }
    </style>
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <div class="auth-wrapper">
        <div class="auth-card" role="form" aria-labelledby="login-title">
            <h1 id="login-title" class="page-title">{{ 'login.heading'|trans }}</h1>
            <p class="muted">{{ 'login.description'|trans }}</p>

            {% if error %}
                <div class="alert alert--error" role="alert">{{ 'login.error'|trans }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="form-grid" novalidate>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-field">
                    <label for="username">{{ 'login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" autocomplete="username" required>
                </div>
                <div class="form-field">
                    <label for="password">{{ 'login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" autocomplete="current-password" required>
                </div>
                <div class="form-field">
                    <label for="mfa_code">{{ 'login.mfa'|trans }}</label>
                    <input type="text" id="mfa_code" name="mfa_code" autocomplete="one-time-code" inputmode="numeric">
                </div>
                <button type="submit" class="button button--primary">{{ 'login.submit'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer class="app-footer" role="contentinfo">
        <div class="container app-footer__inner">
            <p>&copy; {{ 'now'|date('Y') }} {{ 'login.footer'|trans }}</p>
        </div>
    </footer>
{% endblock %}
