{% extends 'base.html.twig' %}

{% block title %}{{ 'dashboard.title'|trans }} · {{ 'app.name'|trans }}{% endblock %}

{% block body %}
    <section class="section">
        <div class="section__header">
            <div>
                <h1 class="page-title">{{ 'dashboard.title'|trans }}</h1>
                <p class="lead">{{ 'dashboard.subtitle'|trans }}</p>
            </div>
            <p class="muted">{{ 'dashboard.last_updated'|trans({'%timestamp%': 'Today · 09:45'}) }}</p>
        </div>
    </section>

    <section class="section">
        <div class="grid grid--dashboard">
            <article class="card card--stat" aria-labelledby="stat-visitors">
                <h2 id="stat-visitors" class="muted">{{ 'dashboard.stats.visitors'|trans }}</h2>
                <p class="stat__value">3,548</p>
                <p class="stat__delta">+4.6% week over week</p>
            </article>
            <article class="card card--stat" aria-labelledby="stat-registered">
                <h2 id="stat-registered" class="muted">{{ 'dashboard.stats.registered'|trans }}</h2>
                <p class="stat__value">128</p>
                <p class="stat__delta">+12 new clients</p>
            </article>
            <article class="card card--stat" aria-labelledby="stat-conversions">
                <h2 id="stat-conversions" class="muted">{{ 'dashboard.stats.conversions'|trans }}</h2>
                <p class="stat__value">46%</p>
                <p class="stat__delta">Highest in 6 weeks</p>
            </article>
            <article class="card card--stat" aria-labelledby="stat-alerts">
                <h2 id="stat-alerts" class="muted">{{ 'dashboard.stats.alerts'|trans }}</h2>
                <p class="stat__value">17</p>
                <p class="stat__delta" style="color:#dc2626;">5 urgent</p>
            </article>
        </div>
    </section>

    <section class="section">
        <div class="card">
            <div class="section__header" style="margin-bottom:1rem;">
                <div>
                    <h2>{{ 'dashboard.activity_title'|trans }}</h2>
                    <p class="muted">{{ 'dashboard.activity_intro'|trans }}</p>
                </div>
                <a class="button button--ghost" href="#">{{ 'dashboard.activity_suffix'|trans }}</a>
            </div>
            <div class="table-wrapper" role="region" aria-live="polite">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'dashboard.stats.visitors'|trans }}</th>
                            <th scope="col">{{ 'dashboard.stats.registered'|trans }}</th>
                            <th scope="col">{{ 'dashboard.stats.conversions'|trans }}</th>
                            <th scope="col">{{ 'dashboard.stats.alerts'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>12 team members online</td>
                            <td>8 newly assigned accounts</td>
                            <td>{{ 'dashboard.activity.disputes'|trans }}</td>
                            <td>{{ 'dashboard.activity.imports'|trans }}</td>
                        </tr>
                        <tr>
                            <td colspan="2">{{ 'dashboard.activity.letters'|trans }}</td>
                            <td colspan="2">{{ 'dashboard.activity.reminders'|trans }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
