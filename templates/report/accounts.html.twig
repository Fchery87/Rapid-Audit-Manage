{% extends 'base.html.twig' %}

{% block title %}{{ 'accounts.list.title'|trans }} · {{ 'app.name'|trans }}{% endblock %}

{% block body %}
    <section class="section">
        <div class="section__header">
            <div>
                <h1 class="page-title">{{ 'accounts.list.heading'|trans }}</h1>
                <p class="lead">{{ 'accounts.list.description'|trans }}</p>
            </div>
            <a class="button button--primary" href="{{ path('app_account_add') }}">{{ 'accounts.list.add'|trans }}</a>
        </div>

        <div class="card table-wrapper">
            {% if accounts is not empty %}
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'accounts.list.table.id'|trans }}</th>
                            <th scope="col">{{ 'accounts.list.table.name'|trans }}</th>
                            <th scope="col">{{ 'accounts.list.table.email'|trans }}</th>
                            <th scope="col">{{ 'accounts.list.table.phone'|trans }}</th>
                            <th scope="col">{{ 'accounts.list.table.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for account in accounts %}
                            <tr>
                                <td>{{ account.aid }}</td>
                                <td>{{ account.first_name }} {{ account.last_name }}</td>
                                <td>
                                    {% if account.email %}
                                        <a href="mailto:{{ account.email }}">{{ account.email }}</a>
                                    {% else %}
                                        <span class="muted">—</span>
                                    {% endif %}
                                </td>
                                <td>{{ account.phone ?? '—' }}</td>
                                <td>
                                    <a class="button button--ghost" href="{{ path('app_account_view', { aid: account.aid }) }}">{{ 'accounts.list.view'|trans }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="table-empty">{{ 'accounts.list.empty'|trans }}</div>
            {% endif %}
        </div>
    </section>
{% endblock %}
